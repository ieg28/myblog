<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.SingupActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/app_logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Name" />

    <EditText
        android:id="@+id/sing_up_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ieg" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email" />

    <EditText
        android:id="@+id/sing_up_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ieg@gmail.com" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password" />

    <EditText
        android:id="@+id/sing_up_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="******" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password Validate" />

    <EditText
        android:id="@+id/sing_up_password_validate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="******" />

    <Button
        android:id="@+id/sing_up_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sing up" />
</LinearLayout>